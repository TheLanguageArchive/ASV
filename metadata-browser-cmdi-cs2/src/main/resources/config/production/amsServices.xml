<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd"
       profile="cmdi-production,cmdi-production-ams">

    <bean id="AmsService" class="nl.mpi.metadatabrowser.ams.AmsRemoteServiceCMDIAdapter"/>
    <bean id="AmsRemoteService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl"
                  value="http://lux16/am/ams2-cmdi/api/v1/httpinvoker/AmsRemoteService" />
        <property name="serviceInterface" value="nl.mpi.lat.ams.IAmsRemoteService" />
    </bean>

</beans>
