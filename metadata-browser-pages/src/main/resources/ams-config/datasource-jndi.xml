<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

<!-- ** persistence layer :: hibernate  ************************************ -->
        
        <beans profile="asv-ams-hybrid">
            <!-- datasource, driver & connection -->
            <!-- datasource in JNDI mode -->
            <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean" >
                <property name="jndiName" value="java:comp/env/jdbc/AMS2-CMDI-DB" />
            </bean>
        </beans>
        
        <beans profile="asv-ams-old">
            <!-- datasource, driver & connection -->
            <!-- datasource in JNDI mode -->
            <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean" >
                <property name="jndiName" value="java:comp/env/jdbc/AMS2DB" />
            </bean>
        </beans>
	
</beans>
