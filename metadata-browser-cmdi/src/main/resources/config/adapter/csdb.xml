<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd"
       profile="cmdi-adapter-csdb">
    
    <!-- 
	Spring configuration of the corpus structure database beans for usage in a production environment.
	
	These beans should get picked up by the metadata browser wicket application as long as the 'cmdi-production' profile
	or 'cmdi-production-csdb' is active.
    -->
    
    <!-- CSDB factory -->
    <bean id="csdbFactory" class="nl.mpi.archiving.corpusstructure.adapter.CorpusStructureAPIProviderFactory">
	<constructor-arg value="java:comp/env/jdbc/CSDB" />
    </bean>
    
    <!-- CSDB created from factory -->
    <bean id="csdb" factory-bean="csdbFactory" factory-method="createCorpusStructureDB" />

    <!-- Node resolver that can do smart things with the 'node:xyz' URIs returned from the adapater corpus structure provider -->
    <bean id="nodeResolver" factory-bean="csdbFactory" factory-method="createNodeResolver" />
    
</beans>
